generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique
  createdAt   DateTime @default(now())
  email       String   @unique
  firebaseUid String   @unique
  role        Role     @default(USER)
  cards       Card[]
}

model Card {
  id           String         @id @default(cuid())
  publicCode   String         @unique
  status       CardStatus     @default(UNCLAIMED)
  claimedAt    DateTime?
  ownerId      String?
  definitionId String
  createdAt    DateTime       @default(now())
  definition   CardDefinition @relation(fields: [definitionId], references: [id])
  owner        User?          @relation(fields: [ownerId], references: [id])
}

model CardDefinition {
  id          String   @id @default(cuid())
  type        CardType
  name        String
  description String
  rarity      CardRarity
  effectJson  Json?
  cards       Card[]
}

enum Role {
  USER
  ADMIN
}

enum CardType {
  CHARACTER
  ITEM
  SPELL
  TOOL
}

enum CardRarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
}

enum CardStatus {
  UNCLAIMED
  CLAIMED
  LOCKED
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique
  createdAt   DateTime @default(now())
  email       String   @unique
  firebaseUid String   @unique
  role        Role     @default(USER)
  cards       Card[]
  decks       Deck[]
}

model Card {
  id           String         @id @default(cuid())
  publicCode   String         @unique
  status       CardStatus     @default(UNCLAIMED)
  claimedAt    DateTime?
  ownerId      String?
  definitionId String
  createdAt    DateTime       @default(now())
  definition   CardDefinition @relation(fields: [definitionId], references: [id])
  owner        User?          @relation(fields: [ownerId], references: [id])
  deckCards    DeckCard[]
}

model CardDefinition {
  id          String     @id @default(cuid())
  type        CardType
  name        String
  description String
  rarity      CardRarity
  effectJson  Json?
  imageUrl    String?
  cards       Card[]
}

model Deck {
  id        String     @id @default(cuid())
  name      String
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  cards     DeckCard[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model DeckCard {
  id       String @id @default(cuid())
  deckId   String
  cardId   String
  position Int    @default(0)
  deck     Deck   @relation(fields: [deckId], references: [id], onDelete: Cascade)
  card     Card   @relation(fields: [cardId], references: [id])

  @@unique([deckId, cardId])
}

enum Role {
  USER
  ADMIN
}

enum CardType {
  CHARACTER
  ITEM
  SPELL
  TOOL
}

enum CardRarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
}

enum CardStatus {
  UNCLAIMED
  CLAIMED
  LOCKED
}

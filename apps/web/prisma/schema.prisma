generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum CardType {
  CHARACTER
  ITEM
  SPELL
  TOOL
}

enum CardRarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique
  firebaseUid String   @unique
  email       String   @unique
  createdAt   DateTime @default(now())

  cards Card[]
}

model Card {
  id         String    @id @default(cuid())
  publicCode String    @unique // whatâ€™s stored on the NFC tag
  claimedAt  DateTime?
  createdAt  DateTime  @default(now())

  ownerId String? // nullable because a card might not be claimed yet
  owner   User?   @relation(fields: [ownerId], references: [id])

  definitionId String
  definition   CardDefinition @relation(fields: [definitionId], references: [id])
}

model CardDefinition {
  id         String     @id @default(cuid())
  name       String     @unique
  type       CardType
  rarity     CardRarity
  effectJson Json?

  cards Card[] // all physical copies of this definition
}
